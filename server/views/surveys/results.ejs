<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
              <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                  <thead>
                    <tr>
                      <% for (let i = 0; i < survey.QuestionList.length; i++) { %>
                        <th class="text-center"><%=survey.QuestionList[i]%></th>
                      <% } %>               
                    </tr>
                    </thead>
                    <tbody>
                    <!-- Template Row -->
                    <% for (let a = 0; a < survey.Answers.length; a++) {%>
                    <tr>
                      <% for (let b = 0; b < survey.Answers[a].length; b++) { %>
                        <td class="text-center"><%=survey.Answers[a][b]%></td>
                      <% } %>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
              
              <a href="/surveys" class="btn btn-success"><i class="fa fa-undo"></i> Back to survey list</a>
            
        </div>
      </div>
    </div>

