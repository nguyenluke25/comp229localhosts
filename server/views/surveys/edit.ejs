<%- include("../partials/header.ejs") %>


<!-- Content for the Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">

                <input type="hidden" name="questionNum" value="<%=questionNum%>">
                <div class="form-group">
                    <label for="nameTextField">Survey Title</label>
                    <input type="text" class="form-control"
                    id="titleTextField"
                    placeholder="Enter the title of the survey"
                    name="Title" required
                    value="<%= survey.Title %>">
                </div>

                <% for(var i = 0; i < questionNum; i++) {%>

                <div class="form-group">
                    <label for="qoneTextArea">Question <%=i+1%></label>
                    <textarea type="text" class="form-control"
                    id="qoneTextArea"
                    placeholder="Enter question <%=i+1%> of the survey"
                    name="Question<%=i+1%>" required><% if (i < survey.QuestionList.length) {%><%=survey.QuestionList[i]%><% } %></textarea>
                    <button  class="btn btn-danger btn-sm" type="submit" formaction="/surveys/deletequestion/<%= survey._id %>?<%=i%>">Delete</button>
                </div>

                <% } %>
                <% console.log(survey._id) %>
                <button class="btn btn-primary" type="submit" formaction="/surveys/newquestionfromedit/<%=survey._id%>">
                    Add Question</button>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/surveys" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include("../partials/footer.ejs") %>